@using Harmonify.Shared.Models

@inject SignInManager<ApplicationUser> SignInManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <div class="login-display-mobile">
            <button onclick="location.href='authentication/profile'" class="circular green ui button">
                Hello, @SignInManager.UserManager.GetUserName(User)!
            </button>
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
                <button id="logout" type="submit" class="circular ui button grey">
                    Log out
                </button>
            </form>

        </div>
    }
    else
    {
        <div class="ui medium buttons login-display-mobile">
            <button onclick="location.href='authentication/register'" class="ui button green">
                Register
            </button>
            <div class="or"></div>
            <button onclick="location.href='authentication/login'" class="ui button grey">
                Log in
            </button>
            <i class="sign in icon" style="visibility: visible;"></i>
        </div>
    }
</ul>
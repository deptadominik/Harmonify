@page
@model EmailModel
@{
    ViewData["Title"] = "Manage Email";
    ViewData["ActivePage"] = ManageNavPages.Email;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div>
    <div class="col-md-6">
        <form id="email-form" method="post">
            <div asp-validation-summary="All" class="text-danger" role="alert"></div>
            @if (Model.IsEmailConfirmed)
            {
                <div class="form-floating mb-3">
                    <div class="field" placeholder="Email">
                        <div class="ui fluid harmonify-background-color label">Email</div>
                        <div class="ui fluid large disabled input">
                            <input asp-for="Email" placeholder="Please enter your email." disabled/>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="form-floating mb-3">
                    <input asp-for="Email" class="form-control" placeholder="Please enter your email." disabled />
                    <label asp-for="Email" class="form-label"></label>
                    <button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail" class="btn btn-link">Send verification email</button>
                </div>
            }
            <div class="form-floating mb-3">
                <div class="field" placeholder="New email">
                    <div class="ui fluid harmonify-background-color label">New email</div>
                    <div class="ui fluid large input">
                        <input asp-for="Input.NewEmail" placeholder="Please enter new email."/>
                    </div>
                    <span asp-validation-for="Input.NewEmail" class="text-danger"></span>
                </div>
            </div>
            <button asp-page-handler="ChangeEmail" type="submit" class="positive ui fluid button">Change email</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

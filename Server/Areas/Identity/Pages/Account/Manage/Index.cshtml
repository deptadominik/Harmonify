@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div>
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <div class="field" placeholder="Last Name">
                    <div class="ui fluid harmonify-background-color label">Username</div>
                    <div class="ui fluid large disabled input">
                        <input asp-for="Username" placeholder="Please choose your username." disabled/>
                    </div>
                </div>
            </div>
            <div class="form-floating mb-3">
                <div class="field" placeholder="Phone number">
                    <div class="ui fluid harmonify-background-color label">Phone number</div>
                    <div class="ui fluid large input">
                        <input asp-for="Input.PhoneNumber" placeholder="Please enter your phone number."/>
                    </div>
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
            </div>
            <button type="submit" class="positive ui fluid button">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
